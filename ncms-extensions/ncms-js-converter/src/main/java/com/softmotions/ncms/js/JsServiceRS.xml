<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- JsServiceRS mybatis mapper -->
<mapper namespace="com.softmotions.ncms.js.JsServiceRS">


    <!-- Select script path as part of dependency -->
    <select id="selectScriptPathById" parameterType="long">
        SELECT source_script_path
        FROM x_js_spec
        WHERE source_script_id = #{id}
        LIMIT 1
    </select>


    <!-- Select script specification by script hash -->
    <select id="selectScriptSpec" parameterType="string">
        SELECT spec
        FROM x_js_spec
        WHERE fingerprint = #{fingerprint}
    </select>

    <!-- Select scripts count for fingerprint -->
    <select id="selectFingerprintDepCount" parameterType="string">
        SELECT COUNT(*)
        FROM x_js_deps
        WHERE fingerprint = #{fingerprint}
    </select>

    <!-- Removes all dependencies with specified script ID  -->
    <delete id="deleteAllDependenciesWithScript" parameterType="long">
        DELETE FROM x_js_deps AS dep
        WHERE dep.fingerprint IN (
            SELECT fingerprint
            FROM x_js_deps
            WHERE source_script_id = #{id}
        )
    </delete>

    <!-- Insert script to fingerprint dependency -->
    <insert id="insertScriptDep"
            parameterType="map">
        INSERT INTO x_js_deps (fingerprint, source_script_id, source_script_path)
        VALUES (#{fingerprint}, #{id}, #{path})
    </insert>


    <!-- Insert script spec -->
    <insert id="insertScriptSpec"
            parameterType="map">
        INSERT INTO x_js_spec (fingerprint, spec)
        VALUES (#{fingerprint}, #{spec})
    </insert>

