<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
            <!--<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>-->
            <!--<pattern>%.-1level|%-40.40logger{0}|%msg%n</pattern>-->
        </encoder>
    </appender>

    <logger name="com.softmotions.commons.web" level="INFO"/>
    <logger name="com.softmotions.ncms.asm.render" level="DEBUG"/>
    <!--<logger name="org.apache.ibatis.datasource" level="DEBUG"/>-->

    <!-- Set it to TRACE in order view MyBatis SQL statements -->
    <logger name="com.softmotions.ncms.asm.AsmDAO" level="INFO"/>
    <logger name="com.softmotions.ncms.adm.AsmsRS" level="DEBUG"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
