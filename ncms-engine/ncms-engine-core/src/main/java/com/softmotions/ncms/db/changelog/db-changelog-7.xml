<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="7.1" author="adamansky@gmail.com">

        <createSequence sequenceName="SEQ_MTT_RULE_ID"
                        incrementBy="1"
                        startValue="1"/>

        <!-- We cannot create autoincremented ID due to ORDINAL column -->
        <createTable tableName="MTT_RULES"
                     remarks="Marketing tools rules">
            <column name="ID" type="BIGINT"
                    remarks="Key values generated by SEQ_MTT_RULE_ID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ORDINAL" type="BIGINT" autoIncrement="true"
                    remarks="Rules sort ordinal">
                <constraints nullable="false"/>
            </column>
            <column name="ENABLED" type="${tinyint.type}"
                    defaultValueNumeric="1"
                    remarks="Is current rule enabled">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(512)"/>
            <column name="FLAGS" type="BIGINT" defaultValueNumeric="0"
                    remarks="Various rules mode bitmask flags">
                <constraints nullable="0"/>
            </column>
            <column name="CDATE" type="TIMESTAMP"
                    remarks="Rule creation date"
                    defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MDATE" type="TIMESTAMP"
                    remarks="Rule modification date"
                    defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>