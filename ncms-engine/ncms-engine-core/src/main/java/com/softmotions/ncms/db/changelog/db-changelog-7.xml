<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="7.1" author="adamansky@gmail.com">

        <createSequence sequenceName="SEQ_MTT_RULE_ID"
                        incrementBy="1"
                        startValue="1"/>

        <!-- We cannot create autoincremented ID due to ORDINAL column -->
        <createTable tableName="MTT_RULES"
                     remarks="Marketing tools rules">
            <column name="ID" type="BIGINT"
                    remarks="Key values generated by SEQ_MTT_RULE_ID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ORDINAL" type="BIGINT" autoIncrement="true"
                    remarks="Rules sort ordinal">
                <constraints nullable="false"/>
            </column>
            <column name="ENABLED" type="${tinyint.type}"
                    defaultValueNumeric="1"
                    remarks="Is current rule enabled">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(512)"/>
            <column name="FLAGS" type="BIGINT" defaultValueNumeric="0"
                    remarks="Various rules mode bitmask flags">
                <constraints nullable="0"/>
            </column>
            <column name="CDATE" type="TIMESTAMP"
                    remarks="Rule creation date"
                    defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MDATE" type="TIMESTAMP"
                    remarks="Rule modification date"
                    defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="7.2" author="adamansky@gmail.com">

        <createTable tableName="MTT_FILTERS"
                     remarks="Marketing tools filter attached to rule (MTT_RULES)">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="TYPE" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(512)"/>
            <column name="RULE_ID" type="BIGINT"
                    remarks="Rule this filter attached to">
                <constraints nullable="false"/>
            </column>
            <column name="SPEC" type="VARCHAR(4096)"
                    remarks="Filter specification, can be serialized JSON object">
                <constraints nullable="false"/>
            </column>
            <column name="CDATE" type="TIMESTAMP"
                    remarks="Rule creation date"
                    defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MDATE" type="TIMESTAMP"
                    remarks="Rule modification date"
                    defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="MTT_FILTERS"
                                 baseColumnNames="RULE_ID"
                                 constraintName="FK_MTT_FILTERS_RULES"
                                 referencedTableName="MTT_RULES"
                                 referencedColumnNames="ID"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="7.2.1" author="tve@softmotions.com">
        <dropNotNullConstraint tableName="MTT_FILTERS" columnName="SPEC"/>
    </changeSet>

    <changeSet id="7.3" author="adamansky@gmail.com">

        <createSequence sequenceName="SEQ_MTT_ACTION_ID"
                        incrementBy="1"
                        startValue="1"/>

        <createTable tableName="MTT_ACTIONS"
                     remarks="Marketing tools action attached to the rule (MTT_RULES)">
            <!-- We cannot create autoincremented ID due to ORDINAL column -->
            <column name="ID" type="BIGINT"
                    remarks="Key values generated by SEQ_MTT_ACTION_ID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="TYPE" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(512)"/>
            <column name="RULE_ID" type="BIGINT"
                    remarks="The rule this action attached">
                <constraints nullable="false"/>
            </column>
            <column name="ORDINAL" type="BIGINT" autoIncrement="true"
                    remarks="Actions position ordinal">
                <constraints nullable="false"/>
            </column>
            <column name="SPEC" type="VARCHAR(4096)"
                    remarks="Actions specification, can be serialized JSON object">
                <constraints nullable="false"/>
            </column>
            <column name="CDATE" type="TIMESTAMP"
                    remarks="Rule creation date"
                    defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MDATE" type="TIMESTAMP"
                    remarks="Rule modification date"
                    defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="MTT_ACTIONS"
                                 baseColumnNames="RULE_ID"
                                 constraintName="FK_MTT_ACTIONS_RULES"
                                 referencedTableName="MTT_RULES"
                                 referencedColumnNames="ID"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>