<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
            <!--<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>-->
            <!--<pattern>%.-1level|%-40.40logger{0}|%msg%n</pattern>-->
        </encoder>
    </appender>

    <logger name="org.apache.solr.update.processor.LogUpdateProcessor" level="WARN"/>
    <logger name="org.apache.solr.core.SolrCore" level="WARN"/>
    <logger name="org.apache.solr.search.SolrIndexSearcher" level="WARN"/>
    <logger name="org.apache.solr.update.UpdateHandler" level="WARN"/>

    <logger name="com.softmotions.commons.web" level="INFO"/>
    <logger name="com.softmotions.ncms.asm.render" level="DEBUG"/>
    <logger name="com.softmotions.ncms.media" level="INFO"/>
    <logger name="com.softmotions.ncms.asm.AsmDAO" level="INFO"/>
    <logger name="com.softmotions.ncms.asm.AsmRS" level="INFO"/>
    <logger name="com.softmotions.ncms.asm.AsmEventsListener" level="INFO"/>
    <logger name="com.softmotions.ncms.asm.PageRS" level="INFO"/>
    <logger name="com.softmotions.ncms.asm.PageSecurityService" level="INFO"/>
    <logger name="com.softmotions.ncms.user.UserEnvRS" level="INFO"/>
    <logger name="com.softmotions.ncms.asm.am.AsmAttributeManagerContext" level="INFO"/>
    <logger name="ru.nsu.legacy.NSULegacyRS" level="INFO"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
