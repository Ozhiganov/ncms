<?xml version="1.0" encoding="UTF-8"?>

<config>
    <!-- URL до монго базы-->
    <connectionUrl>127.0.0.1/portal</connectionUrl>
    <!-- глобальная настройка записи-->
    <writable>false</writable>
    <!-- дополнительные настройки-->
    <properties>
        <roles>
            <writable>true</writable> <!-- возможность записи в коллекцию ролей (надо для инициализации дефолтных ролей) -->
        </roles>
        <groups>
            <writable>true</writable> <!-- возможность записи в коллекцию групп (надо для инициализации дефолтных групп) -->
        </groups>
    </properties>
    <!-- начальные данные. роли и граппу будут созданы при старте (необходимо выставить в true параметры roles.writable и groups.writable) -->
    <defaults>
        <role name="admin" description="Superuser role"/>
        <role name="user" description="Simple user"/>
        <role name="admin.asm" description="Assemblies administrator"/>
        <role name="admin.users" description="Users administrator"/>
        <role name="admin.structure" description="Site atructure administrator"/>

        <group name="users" description="User group" roles="user"/>
        <group name="admins" description="Superuser group" roles="admin,admin.asm,admin.users,user,admin.structure"/>
    </defaults>
</config>
