<!DOCTYPE html>
<html>
<head>
    $!{asm("head")}
</head>
<body>
<div id="wrapper">
    <div class="w1">
        <header id="header">
            ${include("inc/header.httl")}
        </header>

        <div id="main" class="search-page">
            ${include("inc/breadcrumbs.httl")}

            <!-- TODO: search form -->
            <form action="" class="search-form2">
                <fieldset>
                    <div class="row">
                        <input name="spc.search.text" class="text" type="text" value="$!{search_query}"placeholder=""/>
                        <input type="submit" value="Искать"/>
                        <!-- TODO: time filter -->
                        <!--<input type="radio" name="radio1" id="radio1"/>-->
