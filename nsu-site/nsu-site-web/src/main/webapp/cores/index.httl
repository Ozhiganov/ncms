<!DOCTYPE html>
<html>
<head>
    $!{asm("head")}
</head>
<body>
<div id="wrapper">
    <div class="w1 home">
        <header id="header">
            ${include("inc/header.httl")}
        </header>
        <div id="main" class="index-page">
            #set(Tree tree = asm("headline"))
            #if(tree.hasChildren)
            <div class="gallery-holder">
                <ul class="slideset">
                    #foreach(Tree h in tree)
                    <li class="slide">
                        <div class="text-holder">
                            <h2>${h.richRef.name}</h2>

                            <p>${h.richRef.description}</p>
                            <a href="$!{h.richRef.link}" class="more">Подробнее</a>
                        </div>
                        <div style="width:693px; height:400px; overflow:hidden; padding: 0; margin: 0">
                            <img src="$!{h.richRef.image.link}" width="693" alt="${h.richRef.name}"/>
                        </div>
                    </li>
                    #end
                </ul>
                <a href="#" class="btn-prev">prev</a>
                <a href="#" class="btn-next">next</a>
            </div>
            #end

            #set(Tree tree = asm("adlist"))
            #if(tree.hasChildren)
            <ul class="ad-list">
                #foreach(Tree n in tree)
                <li class="${n.richRef.style}"><a href="$!{n.richRef.link}">${n.richRef.name}</a></li>
                #end
            </ul>
            #end
            <!-- News -->
            <div class="three-col" id="news">
                <div class="news-holder">
                    <ul class="tabset">
                        #foreach(String nc in newsCategories)
                        #if(nc == activeCategory)
                        <li class="active"><a href="#">${nc}</a></li>
                        #else
                        <li><a href="?mpc.a.ac=${nc.encodeUriComponent}#news">${nc}</a></li>
                        #end
                        #end
                    </ul>
                    <div class="tab-holder">
                        <div class="tab active">
                            <ul class="news-list">
                                #foreach(Asm pn in news_a)
                                #set(Image icon = pn.asm("icon"))
                                <li>
                                    <div class="img-holder">
                                        #if(icon != null)
                                        <div class="news-img-holder">
                                            <a href="$!{pn.link}"><img src="$!{icon.link}" alt="${pn.hname}"/></a>
                                        </div>
                                        #end
                                        <span class="date">${pn.cdate.format2("dd")}</span>
                                        <span class="month">${pn.cdate.format2("MMMMM")}</span>
                                        <span class="year">${pn.cdate.format2("yyyy")}</span>
                                    </div>
                                    <div class="text-holder">
                                        <h3><a href="$!{pn.link}">${pn.hname}</a></h3>

                                        <p>${pn.asm("annotation")}</p>
                                        #if(pn.isHasAttribute("subcategory"))
                                        #foreach(SelectNode sn in pn.asm("subcategory"))
                                        <span class="tag">${sn.key}</span>
                                        #end
                                        #end
                                    </div>
                                </li>
                                #end
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="announcement-holder">
                    <h3>Анонсы</h3>
                    <ul class="announcement-list">
                        #foreach(Asm pn in news_b)
                        <li>
                            #set(Date event_date = asm(pn, "event_date"))
                            <span class="date">${event_date.format2("dd")} ${event_date.format2("LMMMMM")} <span
                                    class="year">${event_date.format2("yyyy")}</span></span>

                            <p><a href="$!{pn.link}">${pn.asm("annotation")}</a></p>
                        </li>
                        #end
                    </ul>
                </div>
                <div class="faculty-holder">
                    <h3>Новости факультетов</h3>
                    <ul class="faculty-list">
                        #foreach(Asm pn in news_c)
                        <li>
                            <span class="date">${pn.cdate.format2("dd")} ${pn.cdate.format2("LMMMMM")} ${pn.cdate.format2("yyyy")}</span>
                            <span class="faculty">${pn.asm("np_hname")}</span>

                            <p><a href="$!{pn.link}">${pn.asm("annotation")}</a></p>
                        </li>
                        #end
                    </ul>
                </div>
            </div>
            <a href="#" class="fetch-more"><span>Еще больше новостей Вуза</span></a>
            <!-- EOF News -->

            #set(Tree tree = asm("photoline"))
            #if(tree != null && tree.hasChildren)
            <div class="photo-line">
                <div class="viewport">
                    <ul class="overview ad-list2">
                        #foreach(Tree n in tree)
                        <li>
                            <a href="$!{n.richRef.link}">
                                #if(n.richRef.style != "none")
                                <span class="photo">${n.richRef.style}</span>
                                #end
                                <div>
                                    <img src="$!{n.richRef.image.link}" alt="${n.richRef.name}"/>
                                </div>
                                #if(n.richRef.style2 != "nocaption")
                                <h4>${n.richRef.name}</h4>
                                #end
                            </a>
                        </li>
                        #end
                    </ul>
                </div>
            </div>
            #end
            ${include("inc/partners.httl")}
            ${include("inc/soclikes.httl")}
        </div>
        <footer id="footer">
            ${include("inc/footer.httl")}
        </footer>
    </div>
</div>
$!{include("inc/scripts.httl")}
</body>
</html>
