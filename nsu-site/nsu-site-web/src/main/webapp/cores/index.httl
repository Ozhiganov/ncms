<body>
<div id="wrapper">
<div class="w1 home">
<header id="header">
    ${include("inc/header.httl")}
</header>
<div id="main" class="index-page">
    #set(Tree headline = asm("headline"))
    #if(headline.hasChildren)
    <div class="gallery-holder">
        <ul class="slideset">
            #foreach(Tree h in headline)
            <li class="slide">
                <div class="text-holder">
                    <h2>${h.richRef.name}</h2>
                    <p>${h.richRef.description}</p>
                    <a href="$!{h.richRef.link}" class="more">Подробнее</a>
                </div>
                <div style="width:693px; height:400px; overflow:hidden; padding: 0; margin: 0">
                    <img src="$!{h.richRef.image.link}" width="693" alt="${h.richRef.name}" />
                </div>
            </li>
            #end
        </ul>
        <a href="#" class="btn-prev">prev</a>
        <a href="#" class="btn-next">next</a>
    </div>
    #end

    #set(Tree adlist = asm("adlist"))
    #if(adlist.hasChildren)
    <ul class="ad-list">
        #foreach(Tree n in adlist)
        <li class="${n.richRef.style}"><a href="$!{n.richRef.link}">${n.richRef.name}</a></li>
        #end
    </ul>
    #end
    <!-- News -->
    <div class="three-col">
        <div class="news-holder">
            <ul class="tabset">
                #foreach(String nc in newsCategories)
                #if(nc == activeCategory)
                <li class="active"><a href="#">${nc}</a></li>
                #else
                <li><a href="#">${nc}</a></li>
                #end
                #end
            </ul>
            <div class="tab-holder">
                <div class="tab active">
                    <ul class="news-list">
                        #foreach(Asm pn in news)
                        #set(Image icon = asm(pn, "icon"))
                        <li>
                            <div class="img-holder">
                                <div class="news-img-holder">
                                    <a href="$!{link(pn)}"><img src="$!{icon.link}" alt="${pn.hname}"/></a>
                                </div>
                                <span class="date">17</span>
                                <span class="month">май</span>
                                <span class="year">2014</span>
                            </div>
                            <div class="text-holder">
                                <h3><a href="$!{link(pn)}">${pn.hname}</a></h3>
                                <p>${asm(pn, "annotation")}</p>
                                #if(pn.isHasAttribute("subcategory"))
                                #foreach(SelectNode sn in asm(pn, "subcategory"))
                                <span class="tag">${sn.key}</span>
                                #end
                                #end
                            </div>
                        </li>
                        #end
                    </ul>
                </div>
            </div>
        </div>
