#if(menuAttr != null)
#set(Tree menuTree = asm((String) menuAttr))
#if(menuTree != null)
#if(boxSize < 1)
#set(int boxSize = 8)
#end
<ul>
    #foreach(Tree n in menuTree)
    <li><a href="">${n.name}</a>
        #if(n.hasChildren)
        <div class="slide-holder">
            <div class="slide-frame">
                #foreach(box in n.split(boxSize))
                  <ul>
                      #foreach(Tree c in box)
                      <li><a href="$!{c.link}">${c.name}</a></li>
                      #end
                  </ul>
                #end
            </div>
        </div>
        #end
    </li>
    #end
</ul>
#end
#end