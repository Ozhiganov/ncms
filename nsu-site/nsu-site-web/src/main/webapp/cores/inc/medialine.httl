#if(asmHasAttribute("medialine"))
<div class="fotorama"
     data-nav="thumbs"
     data-autoplay="5000"
     data-hash="true"
     data-keyboard="true"
     data-maxwidth="1000"
     data-maxheight="600"
     data-fit="cover"
     data-width="100%"
     data-height="100%">
#foreach(Medialine ml in asm("medialine"))
    <a href="$!{ml.image.link}" data-caption="${ml.description}"><img src="$!{ml.thumbnail.link}"></a>
#end
</div>
#end