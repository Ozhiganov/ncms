<!DOCTYPE html>
<html>
<head>
    $!{asm("head")}
</head>
<body>
<div id="wrapper">
    <div class="w1">
        <header id="header">
            ${include("inc/header.httl")}
        </header>
        <div id="main" class="dept-page">
            ${include("inc/breadcrumbs.httl")}
            <div class="twocolumns type2">
                <div id="content">
                    <h1>${page().hname}</h1>
                    $!{asm("content")}
                </div>
                #set(Tree tree = asm("aside_menu"))
                #if(tree != null && tree.hasChildren)
                <aside id="sidebar">
                    <ul class="side-list">
                        #set(boolean self = false)
                        #foreach(Tree n in tree)
                        <li class='${ifTrue("folder" == n.type, "box")}'><a href="${n.link}">${n.name}</a>
                            #if(n.hasChildren)
                            <ul>
                                #foreach(Tree nn in n)
                                #if(!self && page().link == nn.link)
                                #set(boolean self = true)
                                <li class="self"><a href="${nn.link}"><strong>${nn.name}</strong></a></li>
                                #else
                                <li><a href="${nn.link}">${nn.name}</a></li>
                                #end
                                #end
                            </ul>
                            #end
                        </li>
                        #end
                    </ul>
                </aside>
                #end
            </div>
            ${include("inc/soclikes.httl")}
        </div>
        <footer id="footer">
            ${include("inc/footer.httl")}
        </footer>
    </div>
</div>
$!{include("inc/scripts.httl")}
</body>
</html>
