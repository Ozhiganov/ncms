<!DOCTYPE html>
<html xmlns:og="http://ogp.me/ns#">
<head>
    $!{asm("head")}
</head>
<body>
<div id="wrapper">
    <div class="w1">
        <header id="header">
            ${include("inc/header.httl")}
        </header>
        <div id="main" class="dept-page">
            ${include("inc/breadcrumbs.httl")}
            <div class="twocolumns type2">
                <div id="content">
                    <h1>${page().hname}</h1>
                    $!{asm("content")}

                    #set(Date mdate = page().mdate)
                    <p style="clear: both; text-align: right; color: grey; font-style: italic; font-size: small; margin-top: 10px;">
                        Последняя редакция: ${mdate.format2("dd.MM.YYYY HH:mm")}
                    </p>
                </div>
                ${include("inc/aside_menu.httl", ["menuAttr" : "aside_menu"])}
            </div>
        </div>
        ${include("inc/soclikes.httl")}
        <footer id="footer">
            ${include("inc/footer.httl")}
        </footer>
    </div>
</div>
$!{include("inc/scripts.httl")}
</body>
</html>
