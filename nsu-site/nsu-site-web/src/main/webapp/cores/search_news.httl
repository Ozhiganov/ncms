<!DOCTYPE html>
<html>
<head>
    $!{asm("head")}
</head>
<body>
<div id="wrapper">
    <div class="w1">
        <header id="header">
            ${include("inc/header.httl")}
        </header>

        <div id="main" class="search-page">
            ${include("inc/breadcrumbs.httl")}

            <form action="${page().link}" class="search-form2" id="spc-search-form">
                <fieldset>
                    <div class="row">
                        <input name="spc.text" class="text" type="text" value="$!{search_query}" placeholder=""/>
                        <input type="submit" value="Искать"/>
                        <input type="radio" name="spc.scope" value="all" id="radio1" #if(search_scope == 'all')checked#end/>
                        <label class="radio" for="radio1">За все время</label>
                        <input type="radio" name="spc.scope" value="year" id="radio2" #if(search_scope == 'year')checked#end/>
                        <label class="radio" for="radio2">Год</label>
                        <input type="radio" name="spc.scope" value="half-year" id="radio3" #if(search_scope == 'half-year')checked#end/>
                        <label class="radio" for="radio3">Пол года</label>
                        <input type="radio" name="spc.scope" value="month" id="radio4" #if(search_scope == 'month')checked#end/>
                        <label class="radio" for="radio4">Последний месяц</label>
                    </div>

                    <div class="row">
                        #set(Integer ci = 1)
                        #foreach(Pair category in search_categories)
                        <input type="checkbox" id="check${ci}" name="spc.category" value="${category.one}" #if(category.two == true)checked#end/>
                        <label for="check${ci}">${category.one}</label>
                        #set(Integer ci = ci + 1)
                        #end
                        <!--<select>-->
                        <!--<option>Показать все рубрики</option>-->
                        <!--<option>Показать все рубрики</option>-->
                        <!--<option>Показать все рубрики</option>-->
                        <!--</select>-->
                    </div>
                </fieldset>
            </form>
            <ul id="spc-search-results" class="news-list list2">
                $!{asm("results")}
            </ul>
            <div class="loader" style="display: none;">&nbsp;</div>
            <a class="fetch-more" id="spc-fetch-more" style="display: none"><span>Загрузить еще</span></a>
            ${include("inc/soclikes.httl")}
            ${include("inc/partners.httl")}
        </div>

        <footer id="footer">
            ${include("inc/footer.httl")}
        </footer>
    </div>
</div>
$!{include("inc/scripts.httl")}
<script>
    initSearch($!{search_limit});
</script>
</body>
</html>
