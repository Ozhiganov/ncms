<!DOCTYPE html>
<html>
<head>
    $!{asm("head")}
</head>
<body>
<div id="wrapper">
    <div class="w1">
        <header id="header">
            ${include("inc/header.httl")}
        </header>
        <div id="main" class="dept-page">
            ${include("inc/breadcrumbs.httl")}
            <div class="twocolumns type2">
                <div id="content">
                    <h1>${page().hname}</h1>
                    $!{asm("announce_wiki")}
                    <div style="display:none;">
                        $!{asm("structure_wiki")}
                    </div>
                    <a href="#" class="about"><span>Подробнее о структуре</span></a>

                    <h2>Новости</h2>
                    <ul class="post-list">
                        #foreach(Asm p in asmNavChilds("news.page", 0, 100))
                        #set(Date date = p.eventDate())
                        <li>
                            <div class="date-holder">
                                <span class="date">${date.format2("dd")}</span>
                                <span class="month">${date.format2("MMM")}</span>
                                <span class="year">${date.format2("yyyy")}</span>
                            </div>
                            <div class="text-holder">
                                <h1><a href="$!{p.link}">${p.hname}</a></h1>

                                <p>${p.asm("annotation")}</p>
                            </div>
                        </li>
                        #end
                    </ul>
                </div>
                <aside id="sidebar">
                    <ul class="side-list">
                        #set(Tree tree = asm("dept_menu"))
                        #foreach(Tree n in tree)
                        <li class='${ifTrue(foreach.count == 1, "active")}'><a href="#">${n.name}</a>
                            <ul>
                                #foreach(Tree nn in n)
                                <li><a href="${nn.link}">${nn.name}</a></li>
                                #end
                            </ul>
                        </li>
                        #end
                    </ul>
                </aside>
            </div>
            ${include("inc/soclikes.httl")}
        </div>
        <footer id="footer">
            ${include("inc/footer.httl")}
        </footer>
    </div>
</div>
$!{include("inc/scripts.httl")}
</body>
</html>
