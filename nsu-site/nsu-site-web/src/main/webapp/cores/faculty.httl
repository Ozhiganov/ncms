<!DOCTYPE html>
<html xmlns:og="http://ogp.me/ns#">
<head>
    $!{asm("head")}
</head>
<body>
<div id="wrapper">
<div class="w1">
<header id="header">
    ${include("inc/header.httl")}
</header>
<div id="main" class="faculty-page">
    #set(String rssLink = page().link + "?rss")
    ${include("inc/breadcrumbs.httl")}
    #set(Tree tree = asm("headline"))
    #if(tree.hasChildren)
    <div class="gallery-holder">
        <ul class="slideset">
            #foreach(Tree h in tree)
            <li class="slide" style="${ifTrue(foreach.count > 1, 'display:none')}">
                <div class="text-holder">
                    <h2>${h.richRef.name}</h2>
                    <p>${h.richRef.description}</p>
                    #if(h.richRef.link != null)
                    <a href="$!{h.richRef.link}" class="more">Подробнее</a>
                    #end
                </div>
                <div style="width:693px; height:400px; overflow:hidden; padding:0; margin:0">
                    <img src="$!{h.richRef.image.link}" alt="${h.richRef.name}"/>
                </div>
            </li>
            #end
        </ul>
        <a href="#" class="btn-prev">prev</a>
        <a href="#" class="btn-next">next</a>
    </div>
    #end
    #set(Tree menuTree = asm("fmenu"))
    #if(menuTree != null)
    <ul class="nav2">
        #foreach(Tree n in menuTree)
        <li><a>${n.name}</a>
            #if(n.hasChildren)
            <ul>
                #foreach(Tree c in n)
                <li><a href="$!{c.link}">${c.name}</a></li>
                #end
            </ul>
            #end
        </li>
        #end
    </ul>
    #end
    #set(String description = asm("description"))
    #if(!blank(description))
    <div class="dept-description">
        $!{description}
    </div>
    <a href="#" class="about"><span>Подробнее</span></a>
    #end
    <ul class="news-list list2">
        $!{asm("news_list")}
    </ul>
    <a class="fetch-more" id="fetch-more" style="display: none"><span>Загрузить еще</span></a>

</div>
    ${include("inc/soclikes.httl")}
<footer id="footer">
    ${include("inc/footer.httl")}
</footer>
</div>
</div>
$!{include("inc/scripts.httl")}
<script>
    window.initFetchMore && initFetchMore("a#fetch-more", "$!{page().link}", "ul.news-list", $!{news_limit}, "news");
</script>
</body>
</html>
