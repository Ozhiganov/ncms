<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <modules>
        <module>engine</module>
    </modules>

    <parent>
        <groupId>softmotions</groupId>
        <artifactId>softmotions-base-pom</artifactId>
        <version>1.0.0</version>
    </parent>

    <groupId>softmotions-ncms</groupId>
    <artifactId>ncms-base</artifactId>
    <version>1.0-SNAPSHOT</version>

    <repositories>
        <repository>
            <id>central</id>
            <name>Maven Repository Switchboard</name>
            <layout>default</layout>
            <url>http://repo1.maven.org/maven2</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>jaxion_repository</id>
            <url>http://jaxion.org/mvn/</url>
        </repository>
    </repositories>

    <name>ncms</name>
    <description>NSU site CMS</description>
    <url>https://dev.nsu.ru/gitlab/softmotions/ncms/wikis/home</url>
    <inceptionYear>2014</inceptionYear>

    <developers>
        <developer>
            <name>Anton Adamansky</name>
            <email>adamansky@gmail.com</email>
            <organization>Sofmotions Ltd.</organization>
        </developer>
        <developer>
            <name>Vyacheslav Tyutynkov</name>
            <email>tyutyunkov@gmail.com</email>
            <organization>Sofmotions Ltd.</organization>
        </developer>
    </developers>

    <properties>
        <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.source.version>1.8</java.source.version>
        <maven.war.plugin.version>2.4</maven.war.plugin.version>
        <servlet.api.version>3.1.0</servlet.api.version>
        <python.exec>python</python.exec>
        <qooxdoo.sdk.version>3.5</qooxdoo.sdk.version>
        <qooxdoo.build.job>release</qooxdoo.build.job>
        <qooxdoo.test.job>test</qooxdoo.test.job>
        <qooxdoo.build.python>${python.exec}</qooxdoo.build.python>
    </properties>

    <profiles>
        <profile>
            <id>qxdev</id>
            <properties>
                <qooxdoo.build.job>debug</qooxdoo.build.job>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <build.production>true</build.production>
                <qooxdoo.build.job>production</qooxdoo.build.job>
            </properties>
        </profile>
    </profiles>

    <build>
        <defaultGoal>install</defaultGoal>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-source-plugin</artifactId>
                    <version>2.2.1</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-clean-plugin</artifactId>
                    <version>2.5</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.1</version>
                    <configuration>
                        <source>${java.source.version}</source>
                        <target>${java.source.version}</target>
                        <encoding>UTF-8</encoding>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>2.4</version>
                </plugin>
                <!-- QOOXDOO -->
                <plugin>
                    <groupId>softmotions</groupId>
                    <artifactId>qooxdoo-maven-plugin</artifactId>
                    <version>1.0-SNAPSHOT</version>
                    <extensions>true</extensions>
                    <executions>
                        <execution>
                            <id>qooxdoo-initialize</id>
                            <phase>initialize</phase>
                            <goals>
                                <goal>sdk-unpack</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>qooxdoo-generate-sources</id>
                            <phase>generate-sources</phase>
                            <goals>
                                <goal>generate-config</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>qooxdoo-generate-resources</id>
                            <phase>generate-resources</phase>
                            <goals>
                                <goal>generate-resources</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>qooxdoo-generate-compile</id>
                            <goals>
                                <goal>compile</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <sdkParentDirectory>${project.parent.basedir}/.cache</sdkParentDirectory>
                        <cacheDirectory>${project.parent.basedir}/.cache/.qx</cacheDirectory>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencies>

    </dependencies>
</project>